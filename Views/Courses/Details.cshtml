@model OnlineLearningPlatform300.Models.Course
@{
    ViewData["Title"] = Model.Title;
}

<section class="section" style="padding-top: 120px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="course-image" style="height: 400px; background-image: url('https://images.unsplash.com/photo-1516321318423-f06f85e504b3?ixlib=rb-4.0.3&auto=format&fit=crop&w=1200&q=80')">
                        <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center" style="background: rgba(0,0,0,0.5);">
                            <button class="btn btn-primary btn-lg rounded-circle" style="width: 80px; height: 80px;">
                                <i class="fas fa-play fa-2x"></i>
                            </button>
                        </div>
                    </div>
                    <div class="p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <span class="badge bg-primary fs-6">Web Development</span>
                            <div class="text-warning">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <span class="ms-2">4.8 (2,547 reviews)</span>
                            </div>
                        </div>
                        <h1 class="mb-3">@Model.Title</h1>
                        <p class="lead" style="color: #e2e8f0;">@Model.Description</p>
                        
                        <div class="row g-3 mb-4">
                            <div class="col-md-3">
                                <div class="text-center">
                                    <i class="fas fa-clock text-primary mb-2"></i>
                                    <div class="small text-info">Duration</div>
                                    <div class="fw-bold">40 hours</div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <i class="fas fa-users text-primary mb-2"></i>
                                    <div class="small text-info">Students</div>
                                    <div class="fw-bold">15,432</div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <i class="fas fa-signal text-primary mb-2"></i>
                                    <div class="small text-info">Level</div>
                                    <div class="fw-bold">Beginner</div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <i class="fas fa-certificate text-primary mb-2"></i>
                                    <div class="small text-info">Certificate</div>
                                    <div class="fw-bold">Yes</div>
                                </div>
                            </div>
                        </div>

                        <h3>What You'll Learn</h3>
                        <div class="row">
                            <div class="col-md-6">
                                <ul class="list-unstyled">
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>HTML5 & CSS3 fundamentals</li>
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>JavaScript ES6+ features</li>
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>React.js & Redux</li>
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Node.js & Express.js</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <ul class="list-unstyled">
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>MongoDB & Mongoose</li>
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>RESTful API development</li>
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Authentication & Security</li>
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Deployment to cloud platforms</li>
                                </ul>
                            </div>
                        </div>

                        <h3 class="mt-4">Course Content</h3>
                        <div class="lessons-list">
                            @if (Model.Lessons.Any())
                            {
                                @foreach (var lesson in Model.Lessons)
                                {
                                    <div class="lesson-item d-flex align-items-center p-3 mb-2 rounded" style="border: 1px solid rgba(255,255,255,0.1);">
                                        <div class="lesson-icon me-3">
                                            @if (lesson.Type == OnlineLearningPlatform300.Models.LessonType.Video)
                                            {
                                                <i class="fas fa-play-circle text-primary"></i>
                                            }
                                            else if (lesson.Type == OnlineLearningPlatform300.Models.LessonType.Quiz)
                                            {
                                                <i class="fas fa-question-circle text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="fas fa-file-text text-info"></i>
                                            }
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">@lesson.Title</h6>
                                            <small class="text-info">@lesson.Duration min • @lesson.Type</small>
                                        </div>
                                        <a asp-controller="Lessons" asp-action="Details" asp-route-id="@lesson.Id" class="btn btn-sm btn-outline">Start</a>
                                    </div>
                                }
                            }
                            else
                            {
                                <p style="color: #e2e8f0;">No lessons available yet.</p>
                            }
                        </div>
                        
                        <div class="mt-4">
                            <a asp-controller="Lessons" asp-action="Index" asp-route-courseId="@ViewBag.CourseId" class="btn btn-primary">
                                <i class="fas fa-play me-2"></i>Start Course
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card position-sticky" style="top: 120px;">
                    <div class="p-4">
                        <div class="text-center mb-4">
                            <div class="h2 mb-0">₹@Model.Price</div>
                            <div class="text-success small">@Model.Level Level</div>
                        </div>
                        
                        <a asp-action="Enroll" asp-route-id="@ViewBag.CourseId" class="btn btn-primary w-100 mb-3">Enroll Now</a>
                        <button class="btn btn-outline w-100 mb-4">Add to Wishlist</button>
                        
                        <div class="mb-3">
                            <h6>This course includes:</h6>
                            <ul class="list-unstyled">
                                <li class="mb-2"><i class="fas fa-video text-primary me-2"></i>@Model.Duration hours content</li>
                                <li class="mb-2"><i class="fas fa-file-alt text-primary me-2"></i>15 articles</li>
                                <li class="mb-2"><i class="fas fa-download text-primary me-2"></i>Downloadable resources</li>
                                <li class="mb-2"><i class="fas fa-mobile-alt text-primary me-2"></i>Access on mobile and TV</li>
                                <li class="mb-2"><i class="fas fa-infinity text-primary me-2"></i>Full lifetime access</li>
                                <li class="mb-2"><i class="fas fa-certificate text-primary me-2"></i>Certificate of completion</li>
                            </ul>
                        </div>

                        <div class="text-center">
                            <img src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&auto=format&fit=crop&w=150&q=80" 
                                 alt="Instructor" class="rounded-circle mb-2" width="60" height="60">
                            <h6>John Smith</h6>
                            <p style="color: #e2e8f0;" class="small">Senior Full Stack Developer<br>Google, 8+ years experience</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@{
    ViewData["Title"] = "About";
}

<section class="section" style="padding-top: 120px;">
    <div class="container">
        <div class="text-center mb-5">
            <h1 class="section-title">About EduVerse</h1>
            <p class="lead text-muted">Empowering minds through innovative online learning experiences</p>
        </div>

        <div class="row align-items-center mb-5">
            <div class="col-lg-6">
                <h2>Our Mission</h2>
                <p class="lead">We believe that quality education should be accessible to everyone, everywhere. Our mission is to democratize learning by providing world-class courses from industry experts.</p>
                <p>Founded in 2020, EduVerse has grown to become one of the leading online learning platforms, serving over 1 million students worldwide. We're committed to helping learners achieve their goals and advance their careers through cutting-edge technology and innovative teaching methods.</p>
            </div>
            <div class="col-lg-6">
                <img src="https://images.unsplash.com/photo-1522202176988-66273c2fd55f?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                     alt="Our Mission" class="img-fluid rounded-4">
            </div>
        </div>

        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="p-4">
                        <div class="feature-icon mx-auto mb-3">
                            <i class="fas fa-lightbulb"></i>
                        </div>
                        <h4>Innovation</h4>
                        <p class="text-muted">We constantly innovate to provide the best learning experience with cutting-edge technology and interactive content.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="p-4">
                        <div class="feature-icon mx-auto mb-3">
                            <i class="fas fa-heart"></i>
                        </div>
                        <h4>Passion</h4>
                        <p class="text-muted">Our team is passionate about education and committed to helping every student succeed in their learning journey.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="p-4">
                        <div class="feature-icon mx-auto mb-3">
                            <i class="fas fa-globe"></i>
                        </div>
                        <h4>Global Reach</h4>
                        <p class="text-muted">We serve students from over 190 countries, breaking down geographical barriers to quality education.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row align-items-center">
            <div class="col-lg-6 order-lg-2">
                <h2>Our Team</h2>
                <p class="lead">Meet the passionate educators and technologists behind EduVerse.</p>
                <p>Our diverse team brings together expertise from leading universities, Fortune 500 companies, and innovative startups. We're united by our shared vision of making quality education accessible to all.</p>
            </div>
            <div class="col-lg-6 order-lg-1">
                <img src="https://images.unsplash.com/photo-1522202176988-66273c2fd55f?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                     alt="Our Team" class="img-fluid rounded-4">
            </div>
        </div>
    </div>
</section>

<section class="section" style="background: rgba(99, 102, 241, 0.05);">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">Our Impact</h2>
        </div>
        <div class="row g-4">
            <div class="col-md-3">
                <div class="text-center">
                    <div class="display-4 text-primary mb-2">1M+</div>
                    <h5>Students Worldwide</h5>
                    <p class="text-muted">Learners from 190+ countries</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="text-center">
                    <div class="display-4 text-secondary mb-2">500+</div>
                    <h5>Expert Courses</h5>
                    <p class="text-muted">Across 50+ categories</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="text-center">
                    <div class="display-4 text-accent mb-2">95%</div>
                    <h5>Success Rate</h5>
                    <p class="text-muted">Course completion rate</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="text-center">
                    <div class="display-4 text-primary mb-2">100K+</div>
                    <h5>Certificates Issued</h5>
                    <p class="text-muted">Career advancement proof</p>
                </div>
            </div>
        </div>
    </div>
</section>
@{
    ViewData["Title"] = "Quiz Results";
    var quiz = ViewBag.Quiz as OnlineLearningPlatform300.Models.Quiz;
    var score = (int)ViewBag.Score;
    var passed = (bool)ViewBag.Passed;
    var attempt = ViewBag.Attempt;
}

<section class="section" style="padding-top: 120px;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card">
                    <div class="p-5 text-center">
                        @if (passed)
                        {
                            <i class="fas fa-trophy fa-5x text-success mb-4"></i>
                            <h2 class="text-success">Congratulations!</h2>
                            <p class="lead">You passed the quiz!</p>
                        }
                        else
                        {
                            <i class="fas fa-times-circle fa-5x text-danger mb-4"></i>
                            <h2 class="text-danger">Try Again</h2>
                            <p class="lead">You didn't pass this time, but don't give up!</p>
                        }

                        <div class="score-display my-4">
                            <div class="display-3 @(passed ? "text-success" : "text-danger")">@score%</div>
                            <p class="text-muted">Your Score</p>
                        </div>

                        <div class="quiz-info mb-4">
                            <h5>@quiz?.Title</h5>
                            <p class="text-muted">Passing Score: @quiz?.PassingScore%</p>
                        </div>

                        <div class="d-grid gap-2">
                            @if (!passed)
                            {
                                <a asp-action="Take" asp-route-id="@quiz?.Id" class="btn btn-primary">
                                    <i class="fas fa-redo me-2"></i>Retake Quiz
                                </a>
                            }
                            else
                            {
                                <a asp-controller="Lessons" asp-action="Index" asp-route-courseId="@quiz?.Lesson.CourseId" class="btn btn-success">
                                    <i class="fas fa-arrow-right me-2"></i>Continue Course
                                </a>
                            }
                            <a asp-controller="Lessons" asp-action="Details" asp-route-id="@quiz?.LessonId" class="btn btn-outline">
                                <i class="fas fa-arrow-left me-2"></i>Back to Lesson
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@model OnlineLearningPlatform300.Models.Lesson
@{
    ViewData["Title"] = Model.Title;
}

<section class="section" style="padding-top: 120px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h2>@Model.Title</h2>
                            <span class="badge bg-primary">@Model.Type</span>
                        </div>

                        @if (Model.Type == OnlineLearningPlatform300.Models.LessonType.Video)
                        {
                            <div class="video-container mb-4" style="background: #000; border-radius: 10px; height: 400px; display: flex; align-items: center; justify-content: center;">
                                <div class="text-center text-white">
                                    <i class="fas fa-play-circle fa-5x mb-3"></i>
                                    <p>Video Player Placeholder</p>
                                    <small>@Model.VideoUrl</small>
                                </div>
                            </div>
                        }
                        else if (Model.Type == OnlineLearningPlatform300.Models.LessonType.Quiz)
                        {
                            <div class="quiz-container">
                                @if (Model.Quizzes.Any())
                                {
                                    var quiz = Model.Quizzes.First();
                                    <div class="text-center mb-4">
                                        <i class="fas fa-clipboard-list fa-4x text-warning mb-3"></i>
                                        <h4>@quiz.Title</h4>
                                        <p class="text-muted">@quiz.Description</p>
                                        <p><strong>Passing Score:</strong> @quiz.PassingScore%</p>
                                        <a asp-controller="Quiz" asp-action="Take" asp-route-id="@quiz.Id" class="btn btn-primary btn-lg">Start Quiz</a>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="lesson-content">
                                <div class="content-text" style="line-height: 1.8;">
                                    @Html.Raw(Model.Content.Replace("\n", "<br>"))
                                </div>
                            </div>
                        }

                        <div class="lesson-actions mt-4">
                            <button class="btn btn-success" onclick="markComplete(@Model.Id)">
                                <i class="fas fa-check me-2"></i>Mark as Complete
                            </button>
                            <a href="#" class="btn btn-outline ms-2">
                                <i class="fas fa-arrow-left me-2"></i>Previous
                            </a>
                            <a href="#" class="btn btn-outline ms-2">
                                <i class="fas fa-arrow-right me-2"></i>Next
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card">
                    <div class="p-4">
                        <h5>Lesson Info</h5>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="fas fa-clock text-primary me-2"></i>@Model.Duration minutes</li>
                            <li class="mb-2"><i class="fas fa-book text-primary me-2"></i>@Model.Course.Title</li>
                            <li class="mb-2"><i class="fas fa-list-ol text-primary me-2"></i>Lesson @Model.Order</li>
                        </ul>
                        
                        <a asp-controller="Lessons" asp-action="Index" asp-route-courseId="@Model.CourseId" class="btn btn-outline w-100 mt-3">
                            <i class="fas fa-list me-2"></i>Back to Course
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
function markComplete(lessonId) {
    fetch('/Lessons/MarkComplete', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ lessonId: lessonId })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('Lesson marked as complete!');
        }
    });
}
</script>